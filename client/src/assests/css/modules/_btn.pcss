.btn {
  @mixin atSmall {
    color: black;
  }
  &-splash {
    @mixin atSmall {
      border: 3px solid black;
      padding: 10px 20px;
      border-radius: 15px;
      font-weight: 600;
      transition: border-radius 0.5s ease-in-out;
    }
    @mixin atLarge {
      border-radius: 10px;
      &:hover {
        border-radius: 20px;
      }
    }
  }
}
