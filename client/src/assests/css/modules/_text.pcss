.text {
  &-title {
    @mixin atSmall {
      font-size: 2.5rem;
      font-weight: 900;
      margin-bottom: 0;
    }
    &-sub {
      @mixin atSmall {
        font-size: 1.75rem;
        font-weight: 800;
        margin: 0;
      }
    }
  }
  &-tag {
    &--splash {
      @mixin atSmall {
        font-size: 1.125rem;
        font-weight: 700;
        margin: 15px auto 30px auto;
        width: 100px;
        transition: opacity 0.5s ease-out;
      }
    }
  }
}
