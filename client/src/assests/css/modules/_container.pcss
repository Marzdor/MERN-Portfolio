.container {
  @mixin atSmall {
    user-select: none;
  }
  &-img {
    @mixin atSmall {
      width: 100%;
    }
  }
  &-splash {
    @mixin atSmall {
      text-align: center;
      padding-top: 30vh;
    }
    @mixin atLarge {
      padding-top: 35vh;
      width: 300px;
      margin: 0 auto;
    }
  }
}
